import I18nClient from "@astrolicious/i18n/components/I18nClient.astro"
import { getLocale } from "i18n:astro"
import Head from "@/components/Head.astro"

type Props = {
	title: string
	isHomePage?: boolean
}

// const og_image: OgImage = {
